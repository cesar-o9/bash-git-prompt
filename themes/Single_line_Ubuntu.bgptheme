# This is an alternative approach. Single line in git repo.
override_git_prompt_colors() {
  GIT_PROMPT_THEME_NAME="Single_line_Ubuntu"

  GIT_PROMPT_PREFIX="["
  GIT_PROMPT_SUFFIX="]"
  GIT_PROMPT_SEPARATOR="|"
  GIT_PROMPT_BRANCH=""
  GIT_PROMPT_STAGED="${Red}@+${ResetColor}"
  GIT_PROMPT_CONFLICTS="${Red}x ${ResetColor}"
  GIT_PROMPT_CHANGED="+"
  GIT_PROMPT_UNTRACKED="${Cyan}..${ResetColor}"
  GIT_PROMPT_STASHED="${Blue}%${ResetColor}"
  GIT_PROMPT_CLEAN="${Green}=${ResetColor}"

  GIT_PROMPT_COMMAND_OK="= "
  GIT_PROMPT_COMMAND_FAIL="${Red}x "

  GIT_PROMPT_START_USER="_LAST_COMMAND_INDICATOR_${ResetColor}[${PathShort}${ResetColor}]"
  GIT_PROMPT_END_USER="${ResetColor} "
  GIT_PROMPT_END_ROOT="${BoldRed} # "

}

reload_git_prompt_colors "Single_line_Ubuntu"

